	<jpa:repositories base-package="com.aestheticsw.jobkeywords.service.termextractor.repository"
		entity-manager-factory-ref="liquibaseEntityManagerFactory" transaction-manager-ref="transactionManager">
	</jpa:repositories>
	-->

</beans>
